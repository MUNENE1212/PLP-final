# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/baitech
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/baitech?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# For Redis Cloud:
# REDIS_URL=redis://username:password@redis-cloud-url:port

# Cloudinary Configuration (for media storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@baitech.com

# SMS Configuration (Africa's Talking)
AT_USERNAME=your-username
AT_API_KEY=your-api-key
AT_SENDER_ID=BAITECH

# Twilio Configuration (Alternative SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways

# M-Pesa Daraja API
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_PASSKEY=your-passkey
MPESA_SHORTCODE=174379
MPESA_ENVIRONMENT=sandbox
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/payments/mpesa/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Firebase Admin (for push notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
# Or path to service account JSON
FIREBASE_SERVICE_ACCOUNT=./config/firebase-service-account.json

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Agora (Video Calling)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# KYC Service (Smile Identity)
SMILE_PARTNER_ID=your-partner-id
SMILE_API_KEY=your-api-key
SMILE_CALLBACK_URL=https://yourdomain.com/api/v1/kyc/callback

# Client URLs (for CORS and redirects)
CLIENT_WEB_URL=http://localhost:3000
CLIENT_MOBILE_URL=baitech://

# Admin Configuration
ADMIN_EMAIL=admin@baitech.com
ADMIN_PASSWORD=change-this-strong-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_COOKIE_MAX_AGE=86400000

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_AI_MODERATION=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Maintenance Mode
MAINTENANCE_MODE=false

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Monitoring (New Relic, Datadog, etc.)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=BaiTech-Backend

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Timezone
TZ=Africa/Nairobi
